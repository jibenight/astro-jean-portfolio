---
import { Image } from "astro:assets";
import heroVideo from "../assets/video/Vidéo_de_développeur_web_générée.mp4";
---

<section id="home" class="hero-video">
    <video class="bg-video" autoplay muted loop playsinline>
        <source src={heroVideo} type="video/mp4" />
    </video>
    <div class="overlay"></div>

    <div class="hero-content">
        <p class="eyebrow">Jean Nguyen — Product minded dev</p>
        <h1>Des expériences web belles, rapides et scalables.</h1>
        <p class="lead">
            Branding, UX, dev front et automatisations. Je livre vite sans
            sacrifier la performance ni l’accessibilité.
        </p>
        <div class="hero-cta">
            <a class="btn-primary" href="#contact">Planifier un call</a>
            <div class="kpis">
                <span><strong>1.2s</strong> LCP</span>
                <span><strong>+30%</strong> conversion</span>
                <span><strong>4</strong> stacks</span>
            </div>
        </div>
    </div>
</section>

<style>
    #home {
        position: relative;
        min-height: 100vh;
        overflow: hidden;
        color: #fff;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: clamp(1.5rem, 4vw, 3rem);
    }

    .bg-video {
        position: absolute;
        inset: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        filter: brightness(0.55);
    }

    .overlay {
        position: absolute;
        inset: 0;
        background: radial-gradient(
            circle at 20% 20%,
            rgba(13, 138, 232, 0.45),
            rgba(0, 0, 0, 0.55)
        );
    }

    .hero-content {
        position: relative;
        z-index: 1;
        max-width: 720px;
        display: grid;
        gap: 1rem;
        text-shadow: 0 8px 24px rgba(0, 0, 0, 0.35);
    }

    .eyebrow {
        text-transform: uppercase;
        letter-spacing: 0.2rem;
        font-size: 0.85rem;
        opacity: 0.85;
        margin: 0;
    }

    h1 {
        font-size: clamp(2.5rem, 4vw, 3.5rem);
        margin: 0;
    }

    .lead {
        max-width: 560px;
        margin: 0;
    }

    .hero-cta {
        display: flex;
        gap: 1.5rem;
        align-items: center;
        flex-wrap: wrap;
    }

    .btn-primary,
    .btn-ghost {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 0.8rem 1.4rem;
        border-radius: 12px;
        font-weight: 700;
        text-decoration: none;
        transition:
            transform 0.2s ease,
            box-shadow 0.2s ease;
    }

    .btn-primary {
        background: linear-gradient(120deg, #0d8ae8, #1da5fe);
        color: #fff;
        box-shadow: 0 15px 40px rgba(13, 138, 232, 0.35);
    }

    .btn-ghost {
        border: 1px solid rgba(255, 255, 255, 0.5);
        color: #fff;
    }

    .btn-primary:hover,
    .btn-ghost:hover {
        transform: translateY(-2px);
    }

    .kpis {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
        opacity: 0.9;
    }

    .kpis span {
        background: rgba(255, 255, 255, 0.12);
        padding: 0.5rem 0.8rem;
        border-radius: 10px;
        font-size: 0.9rem;
    }

    @media (max-width: 900px) {
        #home {
            padding: 1.5rem;
            align-items: flex-start;
        }
    }
</style>
