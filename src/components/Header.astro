---
import { Image } from 'astro:assets';
import chevron from '../assets/images/chevron.png';

const components = [
  {
    label: 'À propos de moi',
    position: 'top',
    rotation: 90,
    target: 'about',
  },
  { label: 'Portfolio', position: 'left', rotation: 0, target: 'portfolio' },
  {
    label: 'Mes compétences',
    position: 'bottom',
    rotation: 270,
    target: 'skills',
  },
  { label: 'Contact', position: 'right', rotation: 180, target: 'contact' },
];
---

<header>
  <button
    class='menu-toggle'
    type='button'
    aria-label='Ouvrir le menu'
    aria-expanded='false'
  >
    <span></span>
    <span></span>
    <span></span>
  </button>

  <div class='mobile-menu' aria-hidden='true'>
    <div class='mobile-menu-content'>
      {
        components.map(({ label, target }) => (
          <button class='mobile-link' data-target={target}>
            {label}
          </button>
        ))
      }
    </div>
  </div>

  <nav role='navigation' aria-label='navigation principale'>
    {
      components.map(({ label, position, rotation, target }) => (
        <div class={`nav-item nav-${position}`} data-target={target}>
          <p>{label}</p>
          <Image
            src={chevron}
            alt={`Chevron pour ${label}`}
            class='fade-in-image'
            style={`transform: rotate(${rotation}deg);`}
            width={64}
            height={64}
            format='webp'
          />
        </div>
      ))
    }
  </nav>
</header>

<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    const toggle = document.querySelector('.menu-toggle');
    const menu = document.querySelector('.mobile-menu');
    const links = document.querySelectorAll('.mobile-link, .nav-item');

    if (!toggle || !menu) return;

    const open = () => {
      menu.classList.add('open');
      toggle.classList.add('open');
      toggle.setAttribute('aria-expanded', 'true');
      document.body.classList.add('no-scroll');
    };

    const close = () => {
      menu.classList.remove('open');
      toggle.classList.remove('open');
      toggle.setAttribute('aria-expanded', 'false');
      document.body.classList.remove('no-scroll');
    };

    toggle.addEventListener('click', () => {
      if (menu.classList.contains('open')) {
        close();
      } else {
        open();
      }
    });

    links.forEach(link => {
      link.addEventListener('click', () => {
        close();
      });
    });

    menu.addEventListener('click', event => {
      if (event.target === menu) {
        close();
      }
    });

    document.addEventListener('keydown', event => {
      if (event.key === 'Escape' && menu.classList.contains('open')) {
        close();
      }
    });
  });
</script>

<style>
  nav {
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 10;
    position: fixed;
    inset: 0;
    pointer-events: none;
    color: #fff;
  }

  .nav-item {
    position: fixed;
    cursor: pointer;
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: 5px;
    font-size: 1.2rem;
    display: flex;
    align-items: center;
    animation: fadeIn 2s ease-in-out;
    pointer-events: auto;
  }

  .nav-item:hover {
    opacity: 0.8;
  }

  .nav-top {
    top: 3%;
    left: 50%;
    transform: translateX(-50%);
    flex-direction: column;
  }

  .nav-bottom {
    bottom: 3%;
    left: 50%;
    transform: translateX(-50%);
    flex-direction: column-reverse;
  }

  .nav-left {
    left: 3%;
    top: 50%;
    transform: translateY(-50%);
    writing-mode: vertical-lr;
    text-orientation: upright;
    flex-direction: column;
  }

  .nav-right {
    right: 3%;
    top: 50%;
    transform: translateY(-50%);
    writing-mode: vertical-lr;
    text-orientation: upright;
    flex-direction: column-reverse;
  }

  nav p {
    margin: 0;
    padding: 5px;
    font-size: 1.2rem;
    font-weight: bold;
    letter-spacing: 5px;
    text-transform: uppercase;
    color: inherit;
  }

  .fade-in-image {
    opacity: 0;
    transform: translateY(-4px);
    transition:
      opacity 0.2s ease,
      transform 0.2s ease;
    animation: fadeIn 0.2s ease-in-out;
  }

  .nav-item:hover .fade-in-image,
  .nav-item:focus-visible .fade-in-image {
    opacity: 1;
    transform: translateY(0);
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @media (max-width: 768px) {
    nav {
      inset: auto;
      bottom: 1rem;
      left: 50%;
      transform: translateX(-50%);
      width: calc(100% - 2rem);
      max-width: 560px;
      background: rgba(255, 255, 255, 0.9);
      border-radius: 999px;
      box-shadow: 0 18px 40px rgba(0, 0, 0, 0.18);
      padding: 0.6rem 0.8rem;
      gap: 0.5rem;
      pointer-events: auto;
      color: #111;
    }

    .nav-item {
      position: static;
      transform: none !important;
      writing-mode: horizontal-tb;
      text-orientation: initial;
      flex-direction: row;
      font-size: 0.85rem;
      letter-spacing: 2px;
      gap: 0.35rem;
      padding: 0.35rem 0.6rem;
    }

    .nav-top,
    .nav-bottom,
    .nav-left,
    .nav-right {
      top: auto;
      left: auto;
      right: auto;
      bottom: auto;
    }

    .fade-in-image {
      opacity: 1;
      transform: none;
      animation: none;
    }

    nav p {
      padding: 0;
      margin: 0;
    }
  }

  .menu-toggle {
    position: fixed;
    top: 1.2rem;
    right: 1.2rem;
    width: 44px;
    height: 44px;
    border-radius: 12px;
    background: rgba(255, 255, 255, 0.9);
    border: 1px solid rgba(0, 0, 0, 0.08);
    box-shadow: 0 12px 28px rgba(0, 0, 0, 0.18);
    display: none;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 6px;
    cursor: pointer;
    z-index: 20;
  }

  .menu-toggle span {
    width: 20px;
    height: 2px;
    background: #0f172a;
    transition:
      transform 0.2s ease,
      opacity 0.2s ease;
  }

  .menu-toggle.open span:nth-child(1) {
    transform: translateY(8px) rotate(45deg);
  }

  .menu-toggle.open span:nth-child(2) {
    opacity: 0;
  }

  .menu-toggle.open span:nth-child(3) {
    transform: translateY(-8px) rotate(-45deg);
  }

  .mobile-menu {
    position: fixed;
    inset: 0;
    background: rgba(15, 23, 42, 0.75);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 15;
    opacity: 0;
    pointer-events: none;
    transform: scale(1.01);
    transition:
      opacity 0.25s ease,
      transform 0.25s ease;
  }

  .mobile-menu.open {
    opacity: 1;
    pointer-events: auto;
    transform: scale(1);
  }

  .mobile-menu-content {
    display: grid;
    gap: 1rem;
    text-align: center;
    width: min(90vw, 360px);
    transform: translateY(6px);
    transition: transform 0.25s ease;
  }

  .mobile-link {
    background: #fff;
    color: #0f172a;
    border: none;
    padding: 0.9rem 1.4rem;
    border-radius: 16px;
    font-weight: 800;
    font-size: 1.5rem;
    cursor: pointer;
    box-shadow: 0 14px 32px rgba(0, 0, 0, 0.16);
  }

  .no-scroll {
    overflow: hidden;
  }

  @media (max-width: 768px) {
    nav {
      display: none;
    }

    .menu-toggle {
      display: flex;
    }

    .mobile-menu.open .mobile-menu-content {
      transform: translateY(0);
    }
  }
</style>
