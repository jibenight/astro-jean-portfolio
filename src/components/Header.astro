---
import { Image } from "astro:assets";
import chevron from "../assets/images/chevron.png";

const components = [
    {
        label: "À propos de moi",
        position: "top",
        rotation: 90,
        target: "about",
    },
    { label: "Portfolio", position: "left", rotation: 0, target: "portfolio" },
    {
        label: "Mes compétences",
        position: "bottom",
        rotation: 270,
        target: "skills",
    },
    { label: "Contact", position: "right", rotation: 180, target: "contact" },
];
---

<header>
    <nav role="navigation" aria-label="navigation principale">
        {
            components.map(({ label, position, rotation, target }) => (
                <div class={`nav-item nav-${position}`} data-target={target}>
                    <p>{label}</p>
                    <Image
                        src={chevron}
                        alt={`Chevron pour ${label}`}
                        class="fade-in-image"
                        style={`transform: rotate(${rotation}deg);`}
                        width={32}
                        height={32}
                        format="webp"
                    />
                </div>
            ))
        }
    </nav>
</header>

<style>
    nav {
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 10;
        position: fixed;
        inset: 0;
        pointer-events: none;
        color: #fff;
    }

    .nav-item {
        position: fixed;
        cursor: pointer;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 5px;
        font-size: 1.2rem;
        display: flex;
        align-items: center;
        animation: fadeIn 2s ease-in-out;
        pointer-events: auto;
    }

    .nav-item:hover {
        opacity: 0.8;
    }

    .nav-top {
        top: 3%;
        left: 50%;
        transform: translateX(-50%);
        flex-direction: column;
    }

    .nav-bottom {
        bottom: 3%;
        left: 50%;
        transform: translateX(-50%);
        flex-direction: column-reverse;
    }

    .nav-left {
        left: 3%;
        top: 50%;
        transform: translateY(-50%);
        writing-mode: vertical-lr;
        text-orientation: upright;
        flex-direction: column;
    }

    .nav-right {
        right: 3%;
        top: 50%;
        transform: translateY(-50%);
        writing-mode: vertical-lr;
        text-orientation: upright;
        flex-direction: column-reverse;
    }

    nav p {
        margin: 0;
        padding: 5px;
        font-size: 1.2rem;
        font-weight: bold;
        letter-spacing: 5px;
        text-transform: uppercase;
        color: inherit;
    }

    .fade-in-image {
        opacity: 0;
        transform: translateY(-4px);
        transition:
            opacity 0.2s ease,
            transform 0.2s ease;
        animation: fadeIn 0.2s ease-in-out;
    }

    .nav-item:hover .fade-in-image,
    .nav-item:focus-visible .fade-in-image {
        opacity: 1;
        transform: translateY(0);
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

    @media (max-width: 768px) {
        nav {
            inset: auto;
            bottom: 1rem;
            left: 50%;
            transform: translateX(-50%);
            width: calc(100% - 2rem);
            max-width: 560px;
            background: rgba(255, 255, 255, 0.9);
            border-radius: 999px;
            box-shadow: 0 18px 40px rgba(0, 0, 0, 0.18);
            padding: 0.6rem 0.8rem;
            gap: 0.5rem;
            pointer-events: auto;
            color: #111;
        }

        .nav-item {
            position: static;
            transform: none !important;
            writing-mode: horizontal-tb;
            text-orientation: initial;
            flex-direction: row;
            font-size: 0.85rem;
            letter-spacing: 2px;
            gap: 0.35rem;
            padding: 0.35rem 0.6rem;
        }

        .nav-top,
        .nav-bottom,
        .nav-left,
        .nav-right {
            top: auto;
            left: auto;
            right: auto;
            bottom: auto;
        }

        .fade-in-image {
            opacity: 1;
            transform: none;
            animation: none;
        }

        nav p {
            padding: 0;
            margin: 0;
        }
    }
</style>
